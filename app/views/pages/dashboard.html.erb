<h1 style="font-size: 3rem; font-weight: bold; text-align: center; margin-top: 50px; margin-bottom: 20px;">Dashboard</h1>
<p style="text-align: center; font-size: 1.25rem; color: #555; margin-bottom: 40px;">Welcome, <%= current_user.email %>!</p>


<div class="container">
  <div class="row">
    <% if current_user.owner? %>
      <div class="col-sm-12 col-md-6 col-lg-6"   style="border-right:solid gray;">
        <div class="section-container p-3 mb-4">
          <div style="display: flex; align-items: center; justify-content: space-between; padding: 10px 0;">
            <div style="width: 100px;"></div>
            <h2 class="your-places" style="text-align: center; margin: 0;">Your Places</h2>
            <a href="<%= new_space_path %>" class="add-place" style="background-color: #007bff; color: white; border: none; padding: 8px 12px; cursor: pointer; border-radius: 5px; text-decoration: none;">Add space</a>
          </div>
          <div class="row">
            <% current_user.spaces.each do |space| %>
              <div class="col-md-6 mb-4">
                <div class="card h-100 d-flex flex-column">
                  <%= cl_image_tag space.photo.key, class: "card-img-top" %>

                  <%= button_to space_path(space), method: :delete, data: { confirm: 'Are you sure you want to delete this space?' }, class: "transparent-delete-btn btn-sm position-absolute top-0 end-0 m-2" do %>
                    <i class="fa-solid fa-trash"></i>
                  <% end %>

                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= space.name %></h5>
                    <p class="card-text"><%= space.location %></p>
                    <a href="<%= space_path(space) %>" class="btn btn-primary mt-auto">View Details</a>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>


      </div>
      <div class="col-sm-12 col-md-6 col-lg-6" style="border-left:solid gray;">
        <div class="section-container p-3 mb-4">
          <div style="justify-content-center">
            <h2 class="text-center" style="height: 60px; margin:0; padding: 10px 0 ">Your Bookings</h2>
          </div>
          <div class="row">
            <% @bookings.each do |booking| %>
              <div class="col-md-6 mb-4">
                <div class="card h-100 d-flex flex-column">
                  <%= cl_image_tag booking.space.photo.key, class: "card-img-top" %>
                  <% if booking.space.owner == current_user %>
                    <%= button_to booking_path(booking), method: :delete, data: { confirm: 'Are you sure you want to delete this booking?' }, class: "transparent-delete-btn btn-sm position-absolute top-0 end-0 m-2" do %>
                      <i class="fa-solid fa-trash"></i>
                    <% end %>
                  <% end %>

                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= booking.space.name %></h5>
                    <p class="card-text">Renter: <br> <small><%= booking.renter.email%></small></p>
                    <p class="card-text">Status: <%= booking.status %></p>
                    <p class="card-text">
                      Dates: <span style="font-size: 0.8em;"><%= booking.start_date.strftime("%d/%m/%Y") %> - <%= booking.end_date.strftime("%d/%m/%Y") %></span>
                    </p>

                    <% if booking.status == 'pending' %>
                      <div class="d-flex justify-content-between">
                        <%= button_to accept_booking_path(booking), method: :patch, class: "btn btn-success btn-sm" do %>
                          <i class="fas fa-check-circle"></i> Accept
                        <% end %>

                        <%= button_to decline_booking_path(booking), method: :patch, class: "btn btn-danger btn-sm" do %>
                          <i class="fas fa-times-circle"></i> Decline
                        <% end %>
                      </div>
                    <% end %>


                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    <% elsif current_user.renter? %>
      <div class="col-md-12">
        <div class="section-container p-3 mb-4">
          <h2 class="text-center">Your Bookings</h2>
          <div class="row">
            <% @bookings.each do |booking| %>
              <div class="col-md-4 mb-4">
                <div class="card h-100 d-flex flex-column">
                  <%= cl_image_tag booking.space.photo.key, class: "card-img-top" %>
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= booking.space.name %></h5>
                    <p class="card-text"><%= booking.status %></p>
                    <p class="card-text">
                      Dates: <span style="font-size: 0.8em;"><%= booking.start_date.strftime("%d/%m/%Y") %> - <%= booking.end_date.strftime("%d/%m/%Y") %></span>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
