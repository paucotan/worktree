<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <div class="card shadow-lg border-0 rounded-3">
        <img class="card-img-top"
          src="<%= @space.photo.attached? ? cl_image_path(@space.photo.key) : 'https://a0.muscache.com/im/pictures/miso/Hosting-47118372/original/7cb880ec-a5f7-4131-9174-d4e1b124bb67.jpeg?im_w=1200&im_format=avif' %>"
          alt="<%= @space.name %>"
          style="border-radius: 10px 10px 0 0; width: 100%; height: auto;">
        <div class="card-body p-4">
          <h2 class="card-title fw-bold"><%= @space.name %></h2>
          <p class="text-muted"><%= @space.location %></p>
          <p class="card-text mt-3"><strong>Description:</strong> <%= @space.description %></p>
          <div class="d-flex justify-content-between align-items-center mt-4">
            <p class="fw-bold fs-5 text-success">€<%= @space.price_per_hour %> / hour</p>
            <p class="fw-bold fs-5 text-success">€<%= @space.price_per_day %> / day</p>
          </div>
          <p class="card-text"><strong>Capacity:</strong> <%= @space.capacity %> people</p>
          <p class="card-text">
            <strong>Availability:</strong>
            <span class="badge <%= @space.availability_status ? 'bg-success' : 'bg-danger' %>">
              <%= @space.availability_status ? "Available" : "Not Available" %>
            </span>
          </p>
        </div>
      </div>
    </div>

    <div class="col-md-5">
      <% if current_user&.role == "renter" %>
        <div class="card shadow-sm border-0 rounded-3 p-4">
          <h3 class="fw-bold text-center mb-3">Book this space</h3>
          <%= simple_form_for [@space, @booking] do |f| %>
            <div class="mb-3">
              <%= f.input :start_date, label: "Start Date", input_html: { class: "form-control" } %>
            </div>
            <div class="mb-3">
              <%= f.input :end_date, label: "End Date", input_html: { class: "form-control" } %>
            </div>
            <div class="d-grid">
              <%= f.button :submit, "Confirm Booking", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Back to Spaces", spaces_path, class: "btn btn-outline-dark btn-lg" %>
  </div>
</div>
