<h1 class="text-center my-4">All Spaces</h1>
<p class="text-center mb-4">Browse available coworking spaces below:</p>

<div class="container">
  <div class="row justify-content-center">
    <% @spaces.each do |space| %>
      <div class="col-md-4 col-sm-6 mb-4 d-flex">
        <%= link_to space_path(space), class: "text-decoration-none w-100 h-100" do %>
          <div class="card h-100 shadow-sm d-flex flex-column">
            <img class="card-img-top rounded" src="https://a0.muscache.com/im/pictures/miso/Hosting-47118372/original/7cb880ec-a5f7-4131-9174-d4e1b124bb67.jpeg?im_w=720&im_format=avif" alt="Space image">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= space.name %></h5>
              <p class="card-text"><strong>Location:</strong> <%= space.location %></p>
              <p class="card-text"><strong>Price per day:</strong> â‚¬<%= space.price_per_day %></p>
              <p class="card-text"><strong>Capacity:</strong> <%= space.capacity %> people</p>
              <p class="card-text mt-auto text-muted">Click to view details</p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
