<div class="container mt-5">
  <h1 class="text-center fw-bold mb-3">Discover Unique Spaces</h1>
  <p class="text-center text-muted mb-4">Find the perfect coworking space for your needs.</p>

  <div class="row">
    <% @spaces.each do |space| %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden h-100">

          <%= link_to space_path(space), class: "text-decoration-none text-dark" do %>
            <%= cl_image_tag space.photo.key, class: 'card-img-top', height: 220%>

            <div class="card-body d-flex flex-column p-4">
              <h5 class="fw-bold mb-2"><%= space.name %></h5>
              <p class="text-muted"><i class="fas fa-map-marker-alt me-2"></i><%= space.location %></p>

              <div class="d-flex justify-content-between align-items-center mt-2">
                <span class="fw-bold text-success fs-5">â‚¬<%= space.price_per_day %> / day</span>
                <span class="badge bg-primary"><i class="fa-solid fa-user"></i> x <%= space.capacity %></span>
              </div>

              <p class="mt-auto text-muted small">Click to view details</p>
            </div>
          <% end %>

        </div>
      </div>
    <% end %>
  </div>
</div>
